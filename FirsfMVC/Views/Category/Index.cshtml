@model IEnumerable<FirsfMVC.Models.Category>
@{
    ViewData["Title"] = "Index";
}



<div class="container">
    <div>
        <h1>Categories</h1>
    </div>
    <br />
    <div class="text-end">
        <a asp-controller="Category" asp-action="New" class="btn btn-primary" >
            <i class="bi bi-plus"></i> Add New Category
        </a>
    </div>
    <br />
    <table class="table table-bordered table-striped" style="width: 100%">
        <thead>
            <tr>
                <th>
                    Category Id
                </th>
                <th>
                    Category Name
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model!)
            {
                <tr>
                    <td>
                        @category.id
                    </td>
                    <td>
                        @category.Name
                    </td>
                    <td width="10%">
                        <a asp-controller="Category" asp-action="Edit" asp-route-id="@category.id" class="btn btn-sm btn-success">
                            <i class="bi bi-pencil-fill"></i> 
                        </a> 
                        <a asp-controller="Category" asp-action="Delete" asp-route-id="@category.id" class="btn btn-sm btn-danger">
                            <i class="bi bi-trash"></i> 
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>



</div>



